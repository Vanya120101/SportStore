@using SportsStore.WebService.Models
@using SportsStore.WebService.Infrastructure
@model Product


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
        </h4>
        <div style="float:right;margin-right:1%">@Model.Price.ToString("c")</div>
        <div class="card-text p-1">Description: @Model.Description</div>
        <div class="card-text p-1">Category: @Model.Category</div>
    </div>
    <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type="hidden" name="productId" value="@Model.Id" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cards
            </button>
        </span>
    </form>
</div>